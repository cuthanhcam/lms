@model IEnumerable<lms.Models.Course>

<h2>Chào mừng đến với LMS</h2>

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                @if (course.Images != null && course.Images.Any())
                {
                    <img src="@course.Images.First().Url" class="card-img-top" alt="@course.Title" style="height: 200px; object-fit: cover;" />
                }
                <div class="card-body">
                    <h5 class="card-title">@course.Title</h5>
                    <p class="card-text">@course.Description</p>
                    <p class="card-text"><strong>Giá:</strong> @course.Price.ToString("C")</p>
                    <a asp-action="Details" asp-controller="Course" asp-route-id="@course.Id" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>